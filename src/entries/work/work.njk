{% from 'components/work-card/work-card.njk' import workCard %}

<div class="work-detail-card | work-page">
  <div class="work-detail-card__media">
    {{ workCard(class = 'work-detail-card__content', work = work) }}
  </div>
  <div class="work-detail-card__description">
    <div class="work-detail-card__text">
      {{ work.data.caption }}
    </div>
    <a class="work-detail-card__link" href="{{ work.data.origin_link }}" target="_blank" rel="noopener noreferrer">
      Посмотреть в Instagram
    </a>
  </div>
</div>