{% macro video(work, class) %}
  <div class="video {{ class if class }}">
    <video
      class="video__content media"
      src="{{ work.mediaURL | url }}"
      muted
    ></video>

    <button class="video__control video__play" type="button">
      <span class="visually-hidden">Воспроизведение видео</span>
      <svg class="video__play-icon" viewBox="0 0 24 24" width="24" height="24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round" >
        <polygon points="5 3 19 12 5 21 5 3"></polygon>
      </svg>
    </button>

    <button class="video__control video__mute" type="button">
      <span class="visually-hidden">Звук видео</span>
      <svg class="video__mute-icon" viewBox="0 0 24 24" width="24" height="24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round" >
        <polygon points="11 5 6 9 2 9 2 15 6 15 11 19 11 5"></polygon>
        <path class="video__mute-waves" d="M19.07 4.93a10 10 0 0 1 0 14.14M15.54 8.46a5 5 0 0 1 0 7.07"></path>
      </svg>
    </button>
  </div>
{% endmacro %}